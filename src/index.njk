{% extends '_templates/base.njk' %}
{% block page_title %}Queen Band Description{% endblock %}
{% block page_description %}A list of the different band members in Queen.{% endblock %}

{% block content %}
<div class="container">
  <h1> Band Description: </h1> 
  <p>Content goes here</p>
  <h2>Band Members</h2>
  <div class="row">
  {% for members in members.members %}
      <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card">
         <div class="card-body">
          <h2><a href="members/{{ members.slug }}.html">{{ members.name }}</a></h2> 
          <div class="image"> 
      {% for members in queen.members %}
            <img src="img/members/{{members.image}}" alt="Band member photo">
          </div>
    {% endfor %}        
      </div>
    </div>
  </div>
  {% endfor %}
  </div>
{% endblock %}



