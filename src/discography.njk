{% extends '_templates/base.njk' %}

{% block page_title %}Discography{% endblock %}
{% block page_description %}A list of the albums and music of Queen.{% endblock %}

{% block content %}
<div class="container">
<h1> Queen Discography </h1> 
<hr>
<div class="row">
  {% for discography in queen.discography %}
   <div class="col-sm-12 col-lg-3 col-md-6">
        <div class="card">
         <div class="card-body">
           <h1>{{ discography.title }}</h1>
           <h2>{{ discography.year }}</h2>
          <div class="image"> 
            <img src="img/discs/{{discography.image}}" class="img-fluid" alt="Album cover">
          </div>
        </div>
     </div>
  </div>
  {% endfor %}
</div>
</div>
<div class="data">
<iframe title="Queen Billboard" aria-label="Split Bars" id="datawrapper-chart-UsnMR" src="https://datawrapper.dwcdn.net/UsnMR/1/" scrolling="no" frameborder="0" style="width: 0; min-width: 100% !important; border: none;" height="641" data-external="1"></iframe><script type="text/javascript">!function(){"use strict";window.addEventListener("message",(function(a){if(void 0!==a.data["datawrapper-height"]){var e=document.querySelectorAll("iframe");for(var t in a.data["datawrapper-height"])for(var r=0;r<e.length;r++)if(e[r].contentWindow===a.source){var i=a.data["datawrapper-height"][t]+"px";e[r].style.height=i}}}))}();
</script>
</div>
{% endblock %}

